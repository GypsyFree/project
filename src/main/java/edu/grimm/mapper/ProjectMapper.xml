<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >    
<mapper namespace="edu.grimm.dao.ProjectDao" >      
    <resultMap id="BaseResultMap" type="edu.grimm.entity.Project">    
        <result column="id" property="id" jdbcType="INTEGER" />    
        <result column="projectname" property="projectname" jdbcType="VARCHAR" />    
        <result column="projectinfo" property="projectinfo" jdbcType="VARCHAR" />    
    </resultMap> 
       
    
    <sql id="Base_Column_List">    
        id, projectname, projectinfo   
    </sql>
    
    <!-- 查询用户(全部)--> 
	 
	
    <!-- 查询用户（根据id）-->    
    <select id="queryByPrimaryKey" resultMap="BaseResultMap"    
        parameterType="java.lang.Integer">    
        select    
        <include refid="Base_Column_List" />    
        from project    
        where id = #{id,jdbcType=INTEGER}    
    </select>   
   
    
    <!-- 批量查询用户-->    
    <select id="getAllProject" resultMap="BaseResultMap"    
        parameterType="java.util.Map">    
        select    
        
      
        <include refid="Base_Column_List" />    
        from project where id in (select pro_id from acc_pro_re where acc_id= #{id});  
         
    </select>   
  
 
      
</mapper>  